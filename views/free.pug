extends layout

block contentX

    div.box
        span= title
        hr
        br
        br
        
        table.tb
            tr(style="height:25px; font-weight:bold;")
                td(style="70px;") 번호
                td(style="160px;") 제목
                td(style="65px;") 작성자
                td(style="100px;") 날짜
                td(style="55px;") 조회수
                td(style="40px;") 추천

            each val in free
                tr(class="trhover")
                    td #{val.num}
                    td
                        a.link(href="./content?type=free&num=" + val.num) #{val.title}
                    td #{val.nickname}
                    td #{val.writedate}
                    td #{val.hit}
                    td #{val.recommend}
        br
        br
        - if ( user.id )
            form(method="POST", action="./write")
                input(type="submit", name="submit", value="글쓰기", style="float:right;")
                input(type="hidden", name="type", value="free")